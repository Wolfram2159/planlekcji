<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="event_item_primary">
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="event_item_secondary">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!--GradeFragmentItems-->
    <style name="GradeGroupItem">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="GradeChildItem">
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="GradeChildItem.Description">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>
    <style name="GradeChildItem.Date">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>
    <style name="GradeChildItem.BottomLine">
        <item name="android:background">#555555</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>
    <style name="asd" parent="TextAppearance.MaterialComponents.Headline2"></style>

</resources>
